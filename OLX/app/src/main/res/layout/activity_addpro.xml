<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addpro">

    <EditText
        android:id="@+id/su1"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="50dp"
        android:hint="Name of the product"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/su2"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/su1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="103dp"
        android:hint="Brand"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/su3"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/su2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="155dp"
        android:hint="Description"
        android:textAlignment="center"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/su4"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="314dp"
        android:hint="Number of years of usage"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/su5"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/su4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="262dp"
        android:hint="Price"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="14sp" />


    <Button
        android:id="@+id/reg"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/su5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="113dp"
        android:layout_marginRight="113dp"
        android:text="Sell"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="261dp"
        android:layout_height="46dp"
        android:layout_below="@+id/su3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="74dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="9dp"
        android:entries="@array/category_arrays"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        />

    <Button
        android:id="@+id/reg1"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:text="Proceed"
        android:textSize="18dp" />

</RelativeLayout>
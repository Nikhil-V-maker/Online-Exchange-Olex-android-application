<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:id="@+id/su1"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="50dp"
        android:hint="Fname"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/su2"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/su1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="103dp"
        android:hint="Lname"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/su3"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/su2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="155dp"
        android:hint="Phone"
        android:textAlignment="center"
        android:inputType="number"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/su4"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/su3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="206dp"
        android:hint="Email"
        android:textAlignment="center"
        android:inputType="textEmailAddress"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/su5"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/su4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="256dp"
        android:hint="Address"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/su6"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/su5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="306dp"
        android:hint="Password"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/su7"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/su6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="356dp"
        android:hint="Confirm password"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="301dp"
        android:layout_height="56dp"
        android:layout_below="@+id/reg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:background="#00000000"
        android:text=""
        android:textColor="#000000"
        android:textSize="14sp" />

    <Button
        android:id="@+id/reg"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/su7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="113dp"
        android:layout_marginRight="113dp"
        android:text="Register"
        android:textSize="18dp" />


</RelativeLayout>